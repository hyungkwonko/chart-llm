{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "name": "trellis_barley",
  "description": "Trellis",
  "title": {
    "text": null,
    "color": "#168CC7",
    "fontSize": 18,
    "anchor": "start",
    "font": "Montserrat",
    "subtitle": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam convallis enim ac fringilla feugiat",
    "subtitleFont": "Montserrat"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ondata/covid19italia/master/elaborazioni/dpc_covid19/terapiaIntensiva/processing/terapiaIntensivaNaz.csv"
  },
  "transform": [
    {
      "calculate": "timeFormat(datum.data, '%B')",
      "as": "Month"
    }
  ],
  "params": [
    {
      "name": "paintbrush",
      "select": {
        "type": "point",
        "on": "mouseover",
        "nearest": true,
        "clear": "click"
      }
    }
  ],
  "mark": "point",
  "height": 400,
  "width": "container",
  "encoding": {
    "x": {
      "field": "ingressi_terapia_intensiva_mm",
      "type": "quantitative",
      "title": "Ingressi giornalieri in TI",
      "scale": {
        "zero": false,
        "padding": 10
      }
    },
    "y": {
      "field": "terapia_intensiva_mm",
      "type": "quantitative",
      "title": "Totale ricoveri in TI",
      "scale": {
        "zero": false,
        "padding": 10
      }
    },
    "size": {
      "value": 20,
      "condition": {
        "param": "paintbrush",
        "empty": false,
        "value": 150
      }
    },
    "tooltip": [
      {
        "field": "data",
        "type": "temporal",
        "title": "data",
        "format": "%e %B %Y"
      },
      {
        "field": "ingressi_terapia_intensiva_mm",
        "type": "quantitative",
        "title": "ingressi",
        "format": ".0f"
      },
      {
        "field": "terapia_intensiva_mm",
        "type": "quantitative",
        "title": "ricoverati",
        "format": ".0f"
      }
    ],
    "color": {
      "field": "Month",
      "type": "nominal",
      "sort": {
        "field": "mese"
      },
      "legend": {
        "title": "Mesi"
      },
      "scale": {
        "scheme": "tableau10"
      }
    }
  }
}