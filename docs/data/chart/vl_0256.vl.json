      {
        "field": "name",
        "title": "Division"
      },
      {
        "field": "year",
        "title": "Year",
        "type": "temporal",
        "format": "%Y"
      },
      {
        "field": "value",
        "title": "Weight"
      }
    ]
  },
  "layer": [
