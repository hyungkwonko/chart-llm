      "data": {
        "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/charts/ONSinflation/data_MM23-L5CZ.json",
        "format": {
          "type": "json",
          "property": "years"
        }
      },
      "transform": [
        {
          "calculate": "replace(datum.quarter, '', 'Food')",
          "as": "name"
        },
        {
          "calculate": "datum.value/1000",
          "as": "percent"
        }
      ],
      "mark": {
        "type": "line"
