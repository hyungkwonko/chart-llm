{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "IMF Lending as Percentage of World GDP ",
    "subtitle": "Credit oustanding for all members, 1984-2021. Source: IMF, World Bank",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/issylavenstein/issylavenstein.github.io/main/Portfolio/Week%202/IMF%20credit%20data%20d.csv"
  },
  "height": 300,
  "width": 300,
  "mark": {
    "type": "bar",
    "color": "darkslateblue"
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": {
        "title": "Year",
        "grid": false,
        "ticks": false,
        "labelAngle": 45
      }
    },
    "y": {
      "field": "Percentage",
      "type": "quantitative",
      "title": "Total as % of GDP)",
      "axis": {
        "grid": false
      }
    }
  }
}