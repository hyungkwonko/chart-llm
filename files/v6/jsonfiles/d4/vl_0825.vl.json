{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Bitcoin",
    "subtitle": "Daily BTC price in USD. Source: Coinbase via FRED",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black",
    "subtitleColor": "black"
  },
  "width": "container",
  "height": 300,
  "data": {
    "name": "myData",
    "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/charts/crypto/dataFREDbtcCoinbase.csv"
  },
  "mark": {
    "type": "line",
    "color": "red",
    "strokeWidth": 2,
    "opacity": 1
  },
  "transform": [
    {
      "calculate": "timeParse(datum.DATE, '%d/%m/%Y')",
      "as": "date"
    },
    {
      "calculate": "year(datum.date)",
      "as": "year"
    },
    {
      "filter": "datum.year>=minYear"
    },
    {
      "filter": "datum.year<=maxYear"
    }
  ],
  "params": [
    {
      "name": "minYear",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2021,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2021,
        "step": 1,
        "name": "End year:"
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null
    },
    "y": {
      "field": "CBBTCUSD",
      "type": "quantitative",
      "title": null
    }
  }
}