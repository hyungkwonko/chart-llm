{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "IMF Lending",
  "title": {
    "text": "IMF Lending",
    "subtitle": "credit outstanding (billions), source IMF",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ferguswalshe/ferguswalshe.github.io/main/IMF_credit_clean_real.csv"
  },
  "height": 300,
  "width": 345,
  "mark": {
    "type": "bar",
    "point": false,
    "interpolate": "monotone",
    "color": "blueviolet"
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": {
        "title": null,
        "grid": false,
        "labelAngle": 45
      }
    },
    "y": {
      "field": "Totals",
      "type": "quantitative",
      "title": "",
      "axis": {
        "grid": false
      }
    }
  }
}