{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global primary energy consumption",
    "subtitle": [
      "Global primary energy consumption by source",
      "Source: Our World in Data"
    ],
    "subtitleFontSize": 10,
    "subtitleFontStyle": "italic",
    "anchor": "start"
  },
  "height": 150,
  "width": 150,
  "data": {
    "url": "https://raw.githubusercontent.com/harrywright25/harrywright25.github.io/main/Project_chart1(1).csv"
  },
  "mark": {
    "type": "line",
    "size": 2,
    "point": false
  },
  "selection": {
    "Type": {
      "type": "single",
      "fields": [
        "Energy Source"
      ],
      "bind": {
        "input": "select",
        "options": [
          null,
          "Biofuels ()",
          "Coal ()",
          "Gas ()",
          "Hydropower ()",
          "Solar ()",
          "Wind ()",
          "Oil ()",
          "Nuclear ()",
          "Other renewables ()",
          "Traditional biomass ()"
        ],
        "name": "Source"
      }
    }
  },
  "transform": [
    {
      "filter": {
        "selection": "Type"
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": {
        "grid": false
      },
      "title": null
    },
    "y": {
      "field": "Values",
      "type": "quantitative",
      "title": "Energy Consumption (TWh)",
      "axis": {
        "grid": false
      }
    },
    "color": {
      "field": "Energy Source",
      "type": "nominal",
      "scale": {
        "scheme": "darkmulti"
      },
      "legend": {
        "title": null,
        "labelFontSize": 7,
        "orient": "top-left"
      }
    },
    "tooltip": [
      {
        "field": "Energy Source",
        "type": "nominal"
      },
      {
        "field": "Values",
        "title": "Energy cons"
      }
    ]
  }
}