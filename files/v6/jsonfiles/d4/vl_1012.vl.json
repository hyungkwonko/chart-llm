{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total IMF Credit Outstading ",
    "subtitle": "Total (billions) outstanding credit of all members. Source: IMF",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/GeorgeRobbin/GeorgeRobbin.github.io/main/Data/Data_IMF_Outstanding.csv"
  },
  "height": 300,
  "width": 260,
  "mark": {
    "type": "bar",
    "color": "#3662f1"
  },
  "encoding": {
    "x": {
      "field": "Years",
      "type": "temporal",
      "axis": {
        "title": "Years",
        "grid": false,
        "ticks": false,
        "labelAngle": 45
      }
    },
    "y": {
      "field": "Billions",
      "type": "quantitative",
      "title": "Credit Outstading (Billions)",
      "axis": {
        "grid": false
      }
    }
  }
}