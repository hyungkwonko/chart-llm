{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "IMF credit outstanding relative to global GDP",
    "subtitle": "Total IMF credit outstanding relative to global GDP Source:IMF,World Bank",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/GeorgeRobbin/GeorgeRobbin.github.io/main/Data/Data_IMF_Outstanding_GDP.csv"
  },
  "height": 300,
  "width": 260,
  "mark": {
    "type": "bar",
    "color": "#3662f1"
  },
  "encoding": {
    "x": {
      "field": "Years",
      "type": "temporal",
      "axis": {
        "title": "Years",
        "grid": false,
        "ticks": false,
        "labelAngle": 45
      }
    },
    "y": {
      "field": "Totals (Relative to GDP) (Billions)",
      "type": "quantitative",
      "title": "Billions $ (% of Global GDP) ",
      "axis": {
        "grid": false
      }
    }
  }
}