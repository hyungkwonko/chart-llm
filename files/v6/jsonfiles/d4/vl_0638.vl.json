{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Tik Tok game",
  "title": {
    "text": "Putting a price on TikTok",
    "subtitle": [
      "UChicago students retaining TikTok vs monthly payments to give it up",
      ""
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "height": 300,
  "width": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/charts/e4e/ch1_GDP/TikTok_valuationGame.csv",
    "format": {
      "type": "csv"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "size": 50,
        "color": "rgb(128,0,0)",
        "opacity": 1
      },
      "encoding": {
        "x": {
          "field": "Keep_adj",
          "type": "quantitative",
          "title": "Percent keeping TikTok",
          "axis": {
            "format": "f",
            "grid": false
          }
        },
        "y": {
          "field": "Dollars_adj",
          "type": "quantitative",
          "title": "Monthly compensation",
          "axis": {
            "format": "$.0f",
            "grid": false
          }
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "darkgray",
        "size": 1,
        "strokeDash": [
          6,
          3
        ]
      },
      "encoding": {
        "x": {
          "datum": 50
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "strokeWidth": 1,
        "color": "rgb(128,0,0)"
      },
      "transform": [
        {
          "regression": "Dollars_adj",
          "on": "Keep_adj",
          "method": "exp",
          "extent": [
            0,
            100
          ]
        }
      ],
      "encoding": {
        "x": {
          "field": "Keep_adj",
          "type": "quantitative"
        },
        "y": {
          "field": "Dollars_adj",
          "type": "quantitative"
        }
      }
    }
  ]
}