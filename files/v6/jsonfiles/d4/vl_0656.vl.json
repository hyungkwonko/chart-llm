{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "IMF credit outstanding: total",
    "subtitle": [
      "Lending to IMF members, SDRs (bn). Source: IMF",
      ""
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/data/data_IMF_creditOutstandingClean.csv"
  },
  "transform": [
    {
      "calculate": "datum.Totals/1000000000",
      "as": "billions"
    }
  ],
  "height": 300,
  "width": 300,
  "mark": {
    "type": "bar",
    "color": "rgb(0,47,167)"
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": {
        "title": null,
        "grid": false,
        "ticks": false,
        "labelAngle": 0
      }
    },
    "y": {
      "field": "billions",
      "type": "quantitative",
      "title": "",
      "axis": {
        "grid": false
      }
    }
  }
}