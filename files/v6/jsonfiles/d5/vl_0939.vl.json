{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "IMF Lending Outstanding ",
    "subtitle": "Loans issued to all members, 1984-2022. Source: IMF",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/issylavenstein/issylavenstein.github.io/main/Portfolio/Week%202/IMF%20credit%20data%20current.csv"
  },
  "height": 300,
  "width": 300,
  "mark": {
    "type": "bar",
    "color": "darkgreen"
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": {
        "title": "Year",
        "grid": false,
        "ticks": false,
        "labelAngle": 45
      }
    },
    "y": {
      "field": "Totals_USD",
      "type": "quantitative",
      "title": "Total $bn",
      "axis": {
        "grid": false
      }
    }
  }
}